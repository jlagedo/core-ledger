{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=core_ledger_db;Username=postgres;Password=postgres"
  },
  "Database": {
    "MaxRetryCount": 3,
    "MaxRetryDelaySeconds": 30,
    "CommandTimeoutSeconds": 30
  },
  "HttpClient": {
    "Auth0TimeoutSeconds": 30,
    "UserAgent": "CoreLedgerAPI/1.0"
  },
  "Auth0": {
    "Domain": "https://dev-7yj4txd3qg4xsckj.us.auth0.com/",
    "Audience": "https://core-ledger-api",
    "ClockSkewMinutes": 5
  },
  "RabbitMQ": {
    "Hostname": "localhost",
    "Port": "5672",
    "Username": "guest",
    "Password": "guest",
    "PrefetchSize": 0,
    "PrefetchCount": 1,
    "QueueDurable": true,
    "QueueExclusive": false,
    "QueueAutoDelete": false
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "ChannelPrefix": "CoreLedger"
  },
  "Pagination": {
    "DefaultPageSize": 100,
    "MaxPageSize": 100
  },
  "B3Import": {
    "BatchSize": 1000
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/var/tmp/coreledger/core-ledger-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
