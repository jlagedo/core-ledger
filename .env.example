# Core Ledger API - Docker Compose Environment Variables Template
# Copy this file to .env and fill in appropriate values for your environment

# Database Configuration
POSTGRES_DB=core_ledger_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
DB_CONNECTION_STRING=Host=postgres;Port=5432;Database=core_ledger_db;Username=postgres;Password=your_postgres_password_here

# RabbitMQ Configuration
RABBITMQ_HOSTNAME=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379

# Auth0 Configuration
AUTH0_DOMAIN=https://your-tenant.us.auth0.com/
AUTH0_AUDIENCE=https://your-api-audience

# API Configuration
API_HTTP_PORT=5071
API_HTTPS_PORT=7109

# Worker Configuration
WORKER_HTTP_PORT=8080

# Environment
ASPNETCORE_ENVIRONMENT=Development
DOTNET_ENVIRONMENT=Development

# Logging
LOG_LEVEL=Debug

# GlitchTip Configuration
GLITCHTIP_SECRET_KEY=your_secret_key_here
GLITCHTIP_PORT=8000
